<h1>JagTasks</h1>
<h2>Sign in</h2>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password%><br />
    <%= f.password_field :password%>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<%= link_to "Sign up!", new_user_path, :class => "button signup_button" %>
