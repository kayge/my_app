<h1>Edit Profile</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div clsas="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div clsas="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div clsas="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div clsas="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div clsas="actions">
    <%= f.submit "Update" %><br />
  </div>
<% end %>
